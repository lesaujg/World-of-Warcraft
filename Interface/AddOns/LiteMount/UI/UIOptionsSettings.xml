<Script file="UIOptionsSettings.lua" />

<Frame name="LiteMountOptionsSettings" hidden="true">
    <Layers>
        <Layer level="ARTWORK">
            <FontString name="$parentTitle" inherits="GameFontNormalLarge" parentKey="title">
                <Anchors>
                    <Anchor point="TOPLEFT" x="16" y="-16" />
                </Anchors>
            </FontString>
        </Layer>
    </Layers>
    <Frames>
        <CheckButton name="$parentCopyTargetsMount" inherits="InterfaceOptionsCheckButtonTemplate">
            <Anchors>
                <Anchor point="TOPLEFT" relativeTo="$parentTitle" relativePoint="BOTTOMLEFT" x="0" y="-24" />
            </Anchors>
            <Scripts>
                <OnLoad>
                    self.text = _G[self:GetName().."Text"]
                    self.text:SetText("Try to copy target's mount.")
                    self.setFunc = function (setting)
                            if setting == "1" then
                                LM_Options:SetCopyTargetsMount(true)
                            else
                                LM_Options:SetCopyTargetsMount()
                            end
                        end
                    self.refresh = function (self)
                        self:SetChecked(LM_Options:CopyTargetsMount())
                    end
                    LiteMountOptionsPanel_RegisterControl(self)
                </OnLoad>
            </Scripts>
        </CheckButton>
        <CheckButton name="$parentExcludeNewMounts" inherits="InterfaceOptionsCheckButtonTemplate">
            <Anchors>
                <Anchor point="TOPLEFT" relativeTo="$parentCopyTargetsMount" relativePoint="BOTTOMLEFT" x="0" y="-8" />
            </Anchors>
            <Scripts>
                <OnLoad>
                    self.text = _G[self:GetName().."Text"]
                    self.text:SetText("Automatically disable newly learned mounts.")
                    self.setFunc = function (setting)
                            if setting == "1" then
                                LM_Options:SetExcludeNewMounts(true)
                            else
                                LM_Options:SetExcludeNewMounts()
                            end
                        end
                    self.refresh = function (self)
                        self:SetChecked(LM_Options:ExcludeNewMounts())
                    end
                    LiteMountOptionsPanel_RegisterControl(self)
                </OnLoad>
            </Scripts>
        </CheckButton>
    </Frames>
    <Scripts>
        <OnLoad function="LiteMountOptionsSettings_OnLoad" />
        <OnShow function="LiteMountOptionsSettings_OnShow" />
    </Scripts>
</Frame>

</Ui>
